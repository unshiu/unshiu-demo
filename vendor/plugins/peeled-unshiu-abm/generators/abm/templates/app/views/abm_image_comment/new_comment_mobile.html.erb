<% content_for(:header_title) do %>
	<%= t('view.noun.abm_image_comment') %>投稿
<% end %>

<div>
    <% form_tag :action =>"confirm_comment", :id => @image.id do %>
		<div style="<%= style_value('form_style') %>">
			<%= error_messages_for 'comment', :object_name => 'abm_image_comment' %>
			<span style="color:#f75009;"></span><%= t('activerecord.attributes.abm_image_comment.body') %><br />
        	<%= text_area "comment", "body", :size => '50x3' %><br/>
		</div>
		<div style="text-align:center">
        	<%= submit_tag "確認" %>
		</div>
    <% end %>
</div>
<br />
