<% content_for(:header_title) do %>
	下書き<%= t('view.noun.msg_message') %>一覧
<% end %>

<% if @messages.size.zero? %>
	<%= t('view.noun.msg_message') %>がありません。

<% else %>
	<%= paginate_header(@messages) %>
	<% form_tag :action => 'delete_draft_messages_confirm' do %>

	<table style="border:0px;">
	<% @messages.each do |message| %>
	  <tr>
	  <td>
		<span style="font-size:small;">
		<% list_cell_for do %>
	    	<%= link_to_list_cell message.title, :action => 'edit', :id => message.id %><br/>
			<span style="color:#f75009;"></span><%= link_to_user_without_emoticon message.msg_receivers[0].base_user %>
			<%= date_or_time(message.updated_at) %><br />
		<% end %>
	    </span>
      </td>
      <td>
		<%= check_box_tag "del[#{message.id}]", message.id %>
	  </td>
	  </tr>
	<% end %>
	</table>

	<%= paginate_links(@messages) %>
	<br />
	<div style="text-align:center">
	<%= submit_tag "選択した#{t('view.noun.msg_message')}を削除" %>
	</div>

	<% end %>
<% end %>
